{
    "compilerOptions": {
        "target": "ES2015",
        "lib": ["dom", "esnext"],
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "strict": true,
        "declaration": true,
        "importHelpers": true,
        "noEmit": true,
        "esModuleInterop": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "docs",
        "dist"
    ]
}
